doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  title Cập nhật sản phẩm
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='/css/bootstrap.min.css')
.container(style='padding-top:30px')
  .row
    .col-md-3
    .col-md-6
      h3(style='color: #4dce4d') C&#x1EAD;p nh&#x1EAD;t #{value.name}
      form(style='padding: 25px;\
      border-radius: 5px;\
      border: 2px solid #4dce4d;',action=`/edit/${value._id}`, method='post', enctype='multipart/form-data')
        .form-group
          label(for='name') T&ecirc;n s&#x1EA3;n ph&#x1EA9;m
          input#name.form-control(type='text', name='name', value=value.name)
        .form-group
          label(for='type') Lo&#x1EA1;i s&#x1EA3;n ph&#x1EA9;m
          input#type.form-control(type='text', name='type', value=value.type)
        .form-group
          label(for='price') Giá sản phẩm
          input#price.form-control(type='text', name='price', value=value.price)
        .form-group
          label(for='image') Ảnh sản phẩm
          input#image.form-control(type='file', name='image')
        button.btn.btn-success(type='submit') C&#x1EAD;p nh&#x1EAD;t
    .col-md-3